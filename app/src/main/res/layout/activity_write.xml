<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WriteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_weight="1"
                android:text="제목" />

            <EditText
                android:id="@+id/title_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="제목을 입력하세요." />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="유형"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/type_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.25" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButton_concert"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="OneRadioButtonClicked"
                        android:text="공연" />
                    <RadioButton
                        android:id="@+id/radioButton_party"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="OneRadioButtonClicked"
                        android:text="파티" />

                    <RadioButton
                        android:id="@+id/radioButton_musical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="OneRadioButtonClicked"
                        android:layout_weight="1"
                        android:text="뮤지컬" />

                    <RadioButton
                        android:id="@+id/radioButton_play"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="OneRadioButtonClicked"
                        android:layout_weight="1"
                        android:text="연극" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButton_gallery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="OneRadioButtonClicked"
                        android:text="전시회" />

                    <RadioButton
                        android:id="@+id/radioButton_food"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="OneRadioButtonClicked"
                        android:layout_weight="1"
                        android:text="맛집" />

                    <RadioButton
                        android:id="@+id/radioButton_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="OneRadioButtonClicked"
                        android:text="술집" />

                    <RadioButton
                        android:id="@+id/radioButton_event"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="OneRadioButtonClicked"
                        android:layout_weight="1"
                        android:text="이벤트" />


                </LinearLayout>





            </RadioGroup>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="개요"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/content_add"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_weight="0.25"
                android:ems="10"
                android:hint="간단한 설명을 입력해주세요."
                android:inputType="textMultiLine" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="일자"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/time_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onClickTime"
                    android:text="시작"
                    app:srcCompat="@android:drawable/ic_menu_gallery" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~"
                    />
                <Button
                    android:id="@+id/time_end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onClickTime"
                    android:text="종료"
                    app:srcCompat="@android:drawable/ic_menu_gallery" />


            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="이미지"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:onClick="onClickImage"
                app:srcCompat="@android:drawable/ic_menu_gallery" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="태그"
                android:textSize="20sp" />

            <Button
                android:id="@+id/tag_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:onClick="onClickTag"
                android:text="태그 추가"
                app:srcCompat="@android:drawable/ic_menu_gallery" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="위치"
                android:textSize="20sp" />

            <Button
                android:id="@+id/location_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="위치 지정"
                android:onClick="onClickLocation"
                app:srcCompat="@android:drawable/ic_menu_gallery" />

        </LinearLayout>

        <Button
            android:id="@+id/button_comp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickComplete"
            android:text="완료" />


    </LinearLayout>

</ScrollView>

